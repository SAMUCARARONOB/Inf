local isChecked = false
Checkbox.MouseButton1Click:Connect(function()
    isChecked = not isChecked
    Checkbox.BackgroundColor3 = isChecked and Color3.new(0, 1, 0) or Color3.new(0, 0.6, 0.6)
end)

local SliderFrame = Instance.new("Frame")
SliderFrame.Parent = Frame
SliderFrame.Size = UDim2.new(0.9, 0, 0.1, 0)
SliderFrame.Position = UDim2.new(0.05, 0, 0.88, 0)
SliderFrame.BackgroundColor3 = Color3.new(0.15, 0.15, 0.15)
SliderFrame.BorderSizePixel = 0
SliderFrame.BackgroundTransparency = 0.5

local Slider = Instance.new("TextButton")
Slider.Parent = SliderFrame
Slider.Size = UDim2.new(0.05, 0, 1, 0)
Slider.Position = UDim2.new(0, 0, 0, 0)
Slider.Text = ""
Slider.BackgroundColor3 = Color3.new(0, 0.6, 0.6)
Slider.BorderSizePixel = 0

local UICornerSlider = Instance.new("UICorner")
UICornerSlider.Parent = Slider
UICornerSlider.CornerRadius = UDim.new(0, 5)

local SliderLabel = Instance.new("TextLabel")
SliderLabel.Parent = SliderFrame
SliderLabel.Size = UDim2.new(0.75, 0, 1, 0)
SliderLabel.Position = UDim2.new(0.25, 0, 0, 0)
SliderLabel.Text = "Quantidade de tentativas: 0"
SliderLabel.TextColor3 = Color3.new(1, 1, 1)
SliderLabel.BackgroundTransparency = 1
SliderLabel.Font = Enum.Font.SourceSans
SliderLabel.TextSize = 24

Slider.MouseButton1Click:Connect(function(input)
    local mousePos = input.Position.X
    local framePos = SliderFrame.AbsolutePosition.X
    local frameSize = SliderFrame.AbsoluteSize.X
    local newPos = math.clamp(mousePos - framePos, 0, frameSize)
    Slider.Position = UDim2.new(newPos / frameSize, 0, 0, 0)

    local attemptCount = math.floor((newPos / frameSize) * 10)
    SliderLabel.Text = "Quantidade de tentativas: " .. attemptCount
end)

local ErrorMessage = Instance.new("TextLabel")
ErrorMessage.Parent = Frame
ErrorMessage.Size = UDim2.new(1, 0, 0.1, 0)
ErrorMessage.Position = UDim2.new(0, 0, 0.97, 0)
ErrorMessage.Text = ""
ErrorMessage.TextColor3 = Color3.new(1, 0, 0)
ErrorMessage.BackgroundTransparency = 1
ErrorMessage.Font = Enum.Font.SourceSans
ErrorMessage.TextSize = 20

KeyInput.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local valid = KeyInput.Text == "chave_correta"
        if valid then
            InfoLabel.Text = "Chave válida: Sim"
            InfoLabel.TextColor3 = Color3.new(0, 1, 0)
            ErrorMessage.Text = ""
        else
            InfoLabel.Text = "Chave válida: Não"
            InfoLabel.TextColor3 = Color3.new(1, 0, 0)
            ErrorMessage.Text = "Chave inválida. Tente novamente."
        end
    end
end)
